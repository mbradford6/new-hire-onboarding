<div class="frameworks-introduction">
    {{#each this.frameworks}}
        <div class="framework-card">
          <h2>{{this.tool}}</h2>
          <p class="framework-blurb">{{this.openingRemark}}</p>
          <p class="framework-function">{{this.theWhy}}</p>

          {{#each this.steps}}
          {{/each}}

          <a class="external-link" href="{{this.siteLink}}">Link to website for more information <span class="icon-forward"></span></a>
        </div>
    {{/each}}
</div>
