<div id="frameworks-introduction">
    {{#each this.frameworks}}
        <div class="framework-card">
          <h2>{{this.tool}}</h2>
          <p class="framework-blurb">{{this.openingRemark}}</p>
          <div class="framework-function">
            {{#each this.highlights}}
                <p>{{this.description}}</p>
            {{/each}}
          </div>

          <div class="installation-steps">
              {{#each this.steps}}
                  {{#if this.list-step-terminal}}
                    <div class="well">{{this.list-step-terminal}}</div>
                  {{else}}
                    <p>{{this.list-step}}</p>
                  {{/if}}
              {{/each}}
          </div>
          <a class="external-link" href="{{this.siteLink}}">Checkout their website for more information <span class="icon-forward"></span></a>
        </div>
    {{/each}}
</div>
